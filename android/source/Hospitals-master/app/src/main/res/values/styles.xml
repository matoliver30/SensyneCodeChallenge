<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InfoLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spaceRegular</item>
        <item name="android:layout_marginRight">@dimen/spaceRegular</item>
        <item name="android:layout_marginBottom">@dimen/spaceMini</item>
        <item name="android:textSize">@dimen/fontMedium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AddressLine" parent="InfoLine">
        <item name="android:layout_marginBottom">@dimen/noSpace</item>
    </style>

</resources>